<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorActivityBackground"
    android:orientation="vertical"
    tools:context="bo.ara.com.kidstravel.MinorsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label_infoViaje"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/marginTop_row"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/default_fontSize"
        android:text="@string/lbl_travelInfo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/default_fontSize"
        android:layout_marginTop="@dimen/marginTop_row"
        android:text="@string/lbl_selectMinors"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/marginTop_row"
            android:id="@+id/minors_listView">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_btnA"
                android:layout_gravity="bottom"
                android:textSize="@dimen/default_fontSize"
                android:background="@color/colorButton"
                android:textColor="@color/colorFontButton"
                android:paddingTop="@dimen/button_topPadding"
                android:paddingBottom="@dimen/button_bottomPadding"
                android:paddingLeft="@dimen/button_leftPadding"
                android:paddingRight="@dimen/button_rightPadding"
                android:text="@string/btn_Save"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_btnB"
                android:layout_gravity="bottom"
                android:textSize="@dimen/default_fontSize"
                android:background="@color/colorButton"
                android:textColor="@color/colorFontButton"
                android:paddingTop="@dimen/button_topPadding"
                android:paddingBottom="@dimen/button_bottomPadding"
                android:paddingLeft="@dimen/button_leftPadding"
                android:paddingRight="@dimen/button_rightPadding"
                android:layout_marginLeft="5dp"
                android:text="@string/btn_Reject"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
