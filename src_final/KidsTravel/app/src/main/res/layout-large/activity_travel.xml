<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="bo.ara.com.kidstravel.TravelActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label_infoViaje"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/marginTop_row"
        android:layout_marginBottom="0dp"
        android:textSize="@dimen/default_fontSize"
        android:text="@string/lbl_travelInfo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textSize="@dimen/default_fontSize"
            android:layout_marginTop="@dimen/marginTop_row"
            android:layout_marginRight="@dimen/marginRight_tv"
            android:text="@string/lbl_cityOrigin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textSize="@dimen/default_fontSize"
            android:layout_marginTop="@dimen/marginTop_row"
            android:layout_marginLeft="@dimen/marginLeft_tv"
            android:text="@string/lbl_cityDestiny"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingLeft="@dimen/textEdit_leftPadding"
            android:textSize="@dimen/default_fontSize"
            android:layout_marginRight="@dimen/marginRight_tv"
            android:id="@+id/tb_cityOrigin"/>
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingLeft="@dimen/textEdit_leftPadding"
            android:layout_marginLeft="@dimen/marginLeft_tv"
            android:textSize="@dimen/default_fontSize"
            android:id="@+id/tb_cityDestiny"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textSize="@dimen/default_fontSize"
            android:layout_marginTop="@dimen/marginTop_row"
            android:layout_marginRight="@dimen/marginRight_tv"
            android:text="@string/lbl_cityInt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:visibility="invisible"
            android:textSize="@dimen/default_fontSize"
            android:layout_marginTop="@dimen/marginTop_row"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingLeft="@dimen/textEdit_leftPadding"
            android:layout_marginRight="@dimen/marginRight_tv"
            android:textSize="@dimen/default_fontSize"
            android:id="@+id/tb_cityInt"
            android:text=""/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:visibility="invisible"
            android:textSize="@dimen/default_fontSize"
            android:layout_marginTop="@dimen/marginTop_row"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/label_startDate"
            android:textStyle="bold"
            android:textSize="@dimen/default_fontSize"
            android:layout_marginTop="@dimen/marginTop_row"
            android:layout_marginRight="@dimen/marginRight_tv"
            android:text="@string/lbl_startDate"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/label_endDate"
            android:textStyle="bold"
            android:textSize="@dimen/default_fontSize"
            android:layout_marginTop="@dimen/marginTop_row"
            android:layout_marginLeft="@dimen/marginLeft_tv"
            android:text="@string/lbl_endDate"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/textEdit_leftPadding"
                android:textSize="@dimen/default_fontSize"
                android:drawableRight="@drawable/calendar"
                android:layout_marginRight="@dimen/marginRight_tv"
                android:inputType="none"
                android:id="@+id/tb_startDate"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/textEdit_leftPadding"
                android:textSize="@dimen/default_fontSize"
                android:drawableRight="@drawable/calendar"
                android:layout_marginLeft="@dimen/marginLeft_tv"
                android:inputType="none"
                android:id="@+id/tb_endDate"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label_applicant"
        android:textStyle="bold"
        android:textSize="@dimen/default_fontSize"
        android:layout_marginTop="@dimen/marginTop_row"
        android:text="@string/lbl_applicantName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/textEdit_leftPadding"
        android:textSize="@dimen/default_fontSize"
        android:id="@+id/tb_applicant"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_applicant"
        android:id="@+id/label_authorizer"
        android:textStyle="bold"
        android:textSize="@dimen/default_fontSize"
        android:layout_marginTop="@dimen/marginTop_row"
        android:text="@string/lbl_authorizerName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/textEdit_leftPadding"
        android:textSize="@dimen/default_fontSize"
        android:id="@+id/tb_authorizer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_continue"
            android:layout_gravity="bottom"
            android:textSize="@dimen/default_fontSize"
            android:background="@color/colorButton"
            android:textColor="@color/colorFontButton"
            android:paddingTop="@dimen/button_topPadding"
            android:paddingBottom="@dimen/button_bottomPadding"
            android:paddingLeft="@dimen/button_leftPadding"
            android:paddingRight="@dimen/button_rightPadding"
            android:text="@string/btn_Continue"/>

    </LinearLayout>
</LinearLayout>
